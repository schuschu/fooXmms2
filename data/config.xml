<fooXmms2>
	<config>
 		<client>
 			<ip>127.0.0.1</ip>
 			<port>1234</port>
		</client>
		<window>
			<maximised>false</maximised>
			<visible>true</visible>
		</window>
		<debug>
			<enabled>false</enabled>
			<visual>false</visual>
		</debug>
	</config>
	
	<window>
		<view>
			<type>Shell</type>
			<name>SHELL</name>
			<layout>FormLayout</layout>
			<view>
				<type>FooSashForm</type>
				<name>sashFormMain</name>
				<layoutdata>
					<type>FormData</type>
					<top>0</top>
					<left>0</left>
					<right>100</right>
					<bottom>statusbar</bottom>
				</layoutdata>				
				<view>
					<type>FooList</type>
					<name>listArtist</name>
					<backend>
						<type>FooBackendFilter</type>
						<name>artistBackend</name>
						<format>%artist%</format>
						<filter>artist</filter>
						<debugForeground>DARK_MAGENTA</debugForeground>
						<debugBackground>WHITE</debugBackground>
						<contentprovider>ALL</contentprovider>
					</backend>
					<menu>
						<item>
							<name>artistOrder</name>
							<text>change order</text>
							<action>
								<path>artistBackend</path>
								<name>order</name>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
						<item>
							<name>artistFormat</name>
							<text>change format</text>
							<action>
								<path>artistBackend</path>
								<name>format</name>
								<code>0</code>
								<source>MOUSE</source>
							</action>
						</item>
					</menu>
					<action>
						<path>artistBackend</path>
						<name>enqueue</name>
						<code>CR</code>	
						<source>KEYBOARD</source>
					</action>
					<action>
						<path>artistBackend</path>
						<name>enqueue</name>
						<code>2</code>		
						<source>MOUSE</source>
					</action>
					<action>
						<path>artistBackend</path>
						<name>deselect</name>
						<code>ESC</code>	
						<source>KEYBOARD</source>
					</action>
				</view>
				<view>
					<type>FooList</type>
					<name>listAlbum</name>
					<backend>
						<type>FooBackendFilter</type>
						<name>albumBackend</name>
						<format>%album% (%date%)</format>
						<filter>album</filter>
						<debugForeground>MAGENTA</debugForeground>
						<debugBackground>WHITE</debugBackground>
						<contentprovider>artistBackend</contentprovider>
					</backend>
					<menu>
						<item>
							<name>albumOrder</name>
							<text>change order</text>
							<action>
								<path>albumBackend</path>
								<name>order</name>
								<code>0</code>	
								<source>MOUSE</source>
							</action>
						</item>
						<item>
							<name>albumFormat</name>
							<text>change format</text>
							<action>
								<path>albumBackend</path>
								<name>format</name>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
					</menu>		
					<action>
						<path>albumBackend</path>
						<name>enqueue</name>
						<code>CR</code>
						<source>KEYBOARD</source>
					</action>
					<action>
						<path>albumBackend</path>
						<name>enqueue</name>
						<code>2</code>		
						<source>MOUSE</source>
					</action>
					<action>
						<path>albumBackend</path>
						<name>deselect</name>
						<code>ESC</code>	
						<source>KEYBOARD</source>
					</action>			
				</view>
				<view>
					<type>FooList</type>
					<name>listTrack</name>
					<backend>
						<type>FooBackendFilter</type>
						<name>trackBackend</name>
						<format>%title%</format>
						<filter>title</filter>
						<debugForeground>DARK_RED</debugForeground>
						<debugBackground>WHITE</debugBackground>
						<contentprovider>albumBackend</contentprovider>
					</backend>
					<menu>
						<item>
							<name>trackOrder</name>
							<text>change order</text>
							<action>
								<path>trackBackend</path>
								<name>order</name>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
						<item>
							<name>trackFormat</name>
							<text>change format</text>
							<action>
								<path>trackBackend</path>
								<name>format</name>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
					</menu>
					<action>
						<path>trackBackend</path>
						<name>enqueue</name>
						<code>CR</code>	
						<source>KEYBOARD</source>
					</action>
					<action>
						<path>trackBackend</path>
						<name>enqueue</name>
						<code>2</code>	
						<source>MOUSE</source>
					</action>
					<action>
						<path>trackBackend</path>
						<name>deselect</name>
						<code>ESC</code>		
						<source>KEYBOARD</source>
					</action>
				</view>
				<view>
					<type>Composite</type>
					<name>compositePlaylist</name>	
					<layout>FormLayout</layout>
					
					<view>
						<type>FooCombo</type>
						<name>comboPlaylist</name>
						<layoutdata>
							<type>FormData</type>
							<top>0</top>
							<left>0</left>
							<right>100</right>
						</layoutdata>
						<backend>
							<type>FooBackendPlaylistSwitch</type>
							<name>playlistComboBackend</name>
							<debugForeground>GRAY</debugForeground>
							<debugBackground>WHITE</debugBackground>
							<watch>
								<type>FooWatchPlaylist</type>
								<name>watchPlaylistCombo</name>
								<debugForeground>WHITE</debugForeground>
								<debugBackground>RED</debugBackground>
							</watch>
							<watch>
								<type>FooWatchPlaylistLoad</type>
								<name>watchPlaylistComboLoad</name>
								<debugForeground>WHITE</debugForeground>
								<debugBackground>MAGENTA</debugBackground>
							</watch>
						</backend>
					</view>
					<view>
						<type>FooTable</type>
						<name>tablePlaylist</name>
						<layoutdata>
						<type>FormData</type>
							<top>comboPlaylist</top>
							<left>0</left>
							<right>100</right>
							<bottom>buttonsPlaylist</bottom>
						</layoutdata>
						<backend>
							<type>FooBackendPlaylist</type>
							<name>playlistBackend</name>
							<format>%artist% - %title%</format>
							<debugForeground>BLUE</debugForeground>
							<debugBackground>WHITE</debugBackground>
							<watch>
								<type>FooWatchPlaylist</type>
								<name>watchPlaylistList</name>
								<debugForeground>WHITE</debugForeground>
								<debugBackground>DARK_RED</debugBackground>
							</watch>
							<watch>
								<type>FooWatchPlaylistLoad</type>
								<name>watchPlaylistListLoad</name>
								<debugForeground>WHITE</debugForeground>
								<debugBackground>DARK_MAGENTA</debugBackground>
							</watch>
							<watch>
								<type>FooWatchCurrentTrack</type>
								<name>watchCurrentPos</name>
								<debugForeground>BLACK</debugForeground>
								<debugBackground>YELLOW</debugBackground>
							</watch>
						</backend>
						<menu>
							<item>
								<name>playlistFormat</name>
								<text>change format</text>
								<action>
									<path>playlistBackend</path>
									<name>format</name>
									<code>0</code>
									<source>MOUSE</source>
								</action>	
							</item>	
						</menu>
						<action>
							<path>playlistBackend</path>
							<name>play</name>
							<code>2</code>	
							<source>MOUSE</source>
						</action>
						<action>
							<path>playlistBackend</path>
							<name>play</name>
							<code>CR</code>		
							<source>KEYBOARD</source>
						</action>
						<action>
							<path>playlistBackend</path>
							<name>remove</name>
							<code>DEL</code>	
							<source>KEYBOARD</source>
						</action>
						<action>
							<path>playlistBackend</path>
							<name>deselect</name>
							<code>ESC</code>		
							<source>KEYBOARD</source>
						</action>
					</view>					
					<view>
						<type>FooButtonsPlaylist</type>
						<name>buttonsPlaylist</name>
						<layoutdata>
							<type>FormData</type>
							<left>0</left>
							<right>100</right>
							<bottom>buttonsPlayback</bottom>
						</layoutdata>
					</view>				
					<view>
						<type>FooButtonsPlayback</type>
						<name>buttonsPlayback</name>
						<layoutdata>
							<type>FormData</type>
							<left>0</left>
							<right>100</right>
							<bottom>100</bottom>
						</layoutdata>
					</view>
				</view>
			</view>
			<view>
				<type>FooLabel</type>
				<name>statusbar</name>
				<layoutdata>
					<type>FormData</type>
					<left>0</left>
					<right>100</right>
					<bottom>100</bottom>
				</layoutdata>
				<backend>
					<type>FooBackendText</type>
					<name>statusbarBackend</name>
					<format>%status%: %artist% - %title%: %currentTime%/%duration%</format>
					<debugForeground>DARK_YELLOW</debugForeground>
					<debugBackground>WHITE</debugBackground>
					<watch>
						<type>FooWatchCurrentTrack</type>
						<name>watchPlaybackTrack</name>
						<debugForeground>WHITE</debugForeground>
						<debugBackground>DARK_YELLOW</debugBackground>
					</watch>
					<watch>
						<type>FooWatchPlaybackPos</type>
						<name>watchPlaybackPos</name>
						<debugForeground>WHITE</debugForeground>
						<debugBackground>BLACK</debugBackground>
					</watch>
					<watch>
						<type>FooWatchPlaybackStatus</type>
						<name>watchPlaybackStatus</name>
						<debugForeground>WHITE</debugForeground>
						<debugBackground>CYAN</debugBackground>
					</watch>
				</backend>
			</view>
		</view>
	</window>	
</fooXmms2>