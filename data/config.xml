<fooXmms2>
	<config>
 		<client>
 			<ip>127.0.0.1</ip>
 			<port>1234</port>
		</client>
		<window>
			<maximised>false</maximised>
			<visible>true</visible>
		</window>
		<debug>
			<enabled>false</enabled>
			<visual>false</visual>
		</debug>
	</config>
	
	<views>
		<shell>
			<type>Shell</type>
			<name>SHELL</name>
			<sash>
				<type>FooSashForm</type>
				<name>sashFormMain</name>
				<layoutdata>
					<type>FormData</type>
					<top>0</top>
					<left>0</left>
					<right>100</right>
					<bottom>statusbar</bottom>
				</layoutdata>
				<view>
					<type>FooList</type>
					<name>listArtist</name>
					<backend>artistBackend</backend>
				</view>
					
				<view>
					<type>FooList</type>
					<name>listAlbum</name>
					<backend>albumBackend</backend>
				</view>
					
				<view>
					<type>FooList</type>
					<name>listTrack</name>
					<backend>trackBackend</backend>
				</view>
				<composite>
					<type>Composite</type>
					<name>compositePlaylist</name>	
					<Layout>FormLayout</Layout>					
					
					<view>
						<type>FooCombo</type>
						<name>comboPlaylist</name>
						<layoutdata>
							<type>FormData</type>
							<top>0</top>
							<left>0</left>
							<right>100</right>
						</layoutdata>
					</view>
						
					<view>
						<type>FooTable</type>
						<name>tablePlaylist</name>
						<layoutdata>
						<type>FormData</type>
							<top>comboPlaylist</top>
							<left>0</left>
							<right>100</right>
							<bottom>buttonsPlaylist</bottom>
						</layoutdata>
					</view>
					<view>
						<type>FooButtonsPlaylist</type>
						<name>buttonsPlaylist</name>
						<layoutdata>
							<type>FormData</type>
							<left>0</left>
							<right>100</right>
							<bottom>buttonsPlayback</bottom>
						</layoutdata>
					</view>
					<view>
						<type>FooButtonsPlayback</type>
						<name>buttonsPlayback</name>
						<layoutdata>
							<type>FormData</type>
							<left>0</left>
							<right>100</right>
							<bottom>100</bottom>
						</layoutdata>
					</view>
				</composite>
			</sash>
			<statusbar>
				<type>FooLabel</type>
				<name>statusbar</name>
				<layoutdata>
					<type>FormData</type>
					<left>0</left>
					<right>100</right>
					<bottom>100</bottom>
				</layoutdata>
			</statusbar>
		</shell>
	</views>
	
	<backends>
		<backend>
			<type>FooBackendFilter</type>
			<name>artistBackend</name>
			<format>%artist%</format>
			<filter>artist</filter>
			<view>listArtist</view>
			<debugForeground>DARK_MAGENTA</debugForeground>
			<debugBackground>WHITE</debugBackground>
			<contentprovider>ALL</contentprovider>
		</backend>
		
		<backend>
			<type>FooBackendFilter</type>
			<name>albumBackend</name>
			<format>%album% (%date%)</format>
			<filter>album</filter>
			<view>listAlbum</view>
			<debugForeground>MAGENTA</debugForeground>
			<debugBackground>WHITE</debugBackground>
			<contentprovider>artistBackend</contentprovider>
		</backend>
		<backend>
			<type>FooBackendFilter</type>
			<name>trackBackend</name>
			<format>%title%</format>
			<filter>title</filter>
			<view>listTrack</view>
			<debugForeground>DARK_RED</debugForeground>
			<debugBackground>WHITE</debugBackground>
			<contentprovider>albumBackend</contentprovider>
		</backend>
		
		<backend>
			<type>FooBackendPlaylistSwitch</type>
			<name>playlistComboBackend</name>
			<view>comboPlaylist</view>
			<debugForeground>GRAY</debugForeground>
			<debugBackground>WHITE</debugBackground>
		</backend>
		
		
		<backend>
			<type>FooBackendPlaylist</type>
			<name>playlistBackend</name>
			<format>%artist% - %title%</format>
			<view>tablePlaylist</view>
			<debugForeground>BLUE</debugForeground>
			<debugBackground>WHITE</debugBackground>
		</backend>
		
		<backend>
			<type>FooBackendText</type>
			<name>statusbarBackend</name>
			<format>%status%: %artist% - %title%: %currentTime%/%duration%</format>
			<view>statusbar</view>
			<debugForeground>DARK_YELLOW</debugForeground>
			<debugBackground>WHITE</debugBackground>
		</backend>
		
		
	</backends>
	
	<actions>
		<action>
			<path>playlistBackend</path>
			<name>play</name>
			<code>2</code>
			<view>tablePlaylist</view>			
			<source>MOUSE</source>
		</action>
		<action>
			<path>playlistBackend</path>
			<name>play</name>
			<code>CR</code>
			<view>tablePlaylist</view>			
			<source>KEYBOARD</source>
		</action>
		<action>
			<path>playlistBackend</path>
			<name>remove</name>
			<code>DEL</code>
			<view>tablePlaylist</view>			
			<source>KEYBOARD</source>
		</action>
		<action>
			<path>playlistBackend</path>
			<name>deselect</name>
			<code>ESC</code>
			<view>tablePlaylist</view>			
			<source>KEYBOARD</source>
		</action>
		
		<action>
			<path>artistBackend</path>
			<name>enqueue</name>
			<code>CR</code>
			<view>listArtist</view>			
			<source>KEYBOARD</source>
		</action>
		<action>
			<path>artistBackend</path>
			<name>enqueue</name>
			<code>2</code>
			<view>listArtist</view>			
			<source>MOUSE</source>
		</action>
		<action>
			<path>artistBackend</path>
			<name>deselect</name>
			<code>ESC</code>
			<view>listArtist</view>			
			<source>KEYBOARD</source>
		</action>
		
		<action>
			<path>albumBackend</path>
			<name>enqueue</name>
			<code>CR</code>
			<view>listAlbum</view>			
			<source>KEYBOARD</source>
		</action>
		<action>
			<path>albumBackend</path>
			<name>enqueue</name>
			<code>2</code>
			<view>listAlbum</view>			
			<source>MOUSE</source>
		</action>
		<action>
			<path>albumBackend</path>
			<name>deselect</name>
			<code>ESC</code>
			<view>listAlbum</view>			
			<source>KEYBOARD</source>
		</action>
		
		<action>
			<path>trackBackend</path>
			<name>enqueue</name>
			<code>CR</code>
			<view>listTrack</view>			
			<source>KEYBOARD</source>
		</action>
		<action>
			<path>trackBackend</path>
			<name>enqueue</name>
			<code>2</code>
			<view>listTrack</view>			
			<source>MOUSE</source>
		</action>
		<action>
			<path>trackBackend</path>
			<name>deselect</name>
			<code>ESC</code>
			<view>listTrack</view>			
			<source>KEYBOARD</source>
		</action>
		
		
	</actions>
	
	<watches>
		<watch>
			<type>FooWatchPlaylist</type>
			<name>watchPlaylistCombo</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>RED</debugBackground>
			<backend>playlistComboBackend</backend>
		</watch>
		<watch>
			<type>FooWatchPlaylist</type>
			<name>watchPlaylistList</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>DARK_RED</debugBackground>
			<backend>playlistBackend</backend>
		</watch>
		
		<watch>
			<type>FooWatchPlaylistLoad</type>
			<name>watchPlaylistComboLoad</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>MAGENTA</debugBackground>
			<backend>playlistComboBackend</backend>
		</watch>
		<watch>
			<type>FooWatchPlaylistLoad</type>
			<name>watchPlaylistListLoad</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>DARK_MAGENTA</debugBackground>
			<backend>playlistBackend</backend>
		</watch>

		<watch>
			<type>FooWatchCurrentTrack</type>
			<name>watchCurrentPos</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>YELLOW</debugBackground>
			<backend>playlistBackend</backend>
		</watch>
		<watch>
			<type>FooWatchCurrentTrack</type>
			<name>watchPlaybackTrack</name>
			<debugForeground>BLUE</debugForeground>
			<debugBackground>DARK_YELLOW</debugBackground>
			<backend>statusbarBackend</backend>
		</watch>

		<watch>
			<type>FooWatchPlaybackPos</type>
			<name>watchPlaybackPos</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>BLACK</debugBackground>
			<backend>statusbarBackend</backend>
		</watch>

		<watch>
			<type>FooWatchPlaybackStatus</type>
			<name>watchPlaybackStatus</name>
			<debugForeground>WHITE</debugForeground>
			<debugBackground>CYAN</debugBackground>
			<backend>statusbarBackend</backend>
		</watch>	
	</watches>
	
</fooXmms2>
