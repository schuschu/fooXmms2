<fooXmms2>
	<config>
 		<client ip="127.0.0.1" port="1234"/>
		<window maximised="false" visible="true"/>
		<debug enabled="false" visual="false"/>
	</config>
	
	<window>
		<view type="Shell" name="SHELL">
			<layout>FormLayout</layout>
			<view type="FooSashForm" name="sashFormMain">
				<layoutdata type="FormData" top="0" left="0" right="100" bottom="statusbar"/>				
				<view type="FooList" name="listArtist">
					<backend type="FooBackendFilter" name="artistBackend">
						<format>%artist%</format>
						<filter>artist</filter>
						<debugfg>DARK_MAGENTA</debugfg>
						<debugbg>WHITE</debugbg>
						<contentprovider>ALL</contentprovider>
					</backend>
					<menu>
						<item name="artistOrder" text="change order">
							<action name="order">
								<path>artistBackend</path>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
						<item name="artistFormat" text="change format">
							<action name="format">
								<path>artistBackend</path>
								<code>0</code>
								<source>MOUSE</source>
							</action>
						</item>
					</menu>
					<action name="enqueue">
						<path>artistBackend</path>
						<code>CR</code>	
						<source>KEYBOARD</source>
					</action>
					<action name="enqueue">
						<path>artistBackend</path>
						<code>2</code>		
						<source>MOUSE</source>
					</action>
					<action name="deselect">
						<path>artistBackend</path>
						<code>ESC</code>	
						<source>KEYBOARD</source>
					</action>
				</view>
				<view type="FooList" name="listAlbum">
					<backend type="FooBackendFilter" name="albumBackend">
						<format>%album% (%date%)</format>
						<filter>album</filter>
						<debugfg>MAGENTA</debugfg>
						<debugbg>WHITE</debugbg>
						<contentprovider>artistBackend</contentprovider>
					</backend>
					<menu>
						<item name="albumOrder" text="change order">
							<action name="order">
								<path>albumBackend</path>
								<code>0</code>	
								<source>MOUSE</source>
							</action>
						</item>
						<item name="albumFormat" text="change format">
							<action name="format">
								<path>albumBackend</path>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
					</menu>		
					<action name="enqueue">
						<path>albumBackend</path>
						<code>CR</code>
						<source>KEYBOARD</source>
					</action>
					<action name="enqueue">
						<path>albumBackend</path>
						<code>2</code>		
						<source>MOUSE</source>
					</action>
					<action name="deselect">
						<path>albumBackend</path>
						<code>ESC</code>	
						<source>KEYBOARD</source>
					</action>			
				</view>
				<view type="FooList" name="listTrack">
					<backend type="FooBackendFilter" name="trackBackend">
						<format>%title%</format>
						<filter>title</filter>
						<debugfg>DARK_RED</debugfg>
						<debugbg>WHITE</debugbg>
						<contentprovider>albumBackend</contentprovider>
					</backend>
					<menu>
						<item name="trackOrder" text="change order">
							<action name="order">
								<path>trackBackend</path>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
						<item name="trackFormat" text="change format">
							<action name="format">
								<path>trackBackend</path>
								<code>0</code>		
								<source>MOUSE</source>
							</action>
						</item>
					</menu>
					<action name="enqueue">
						<path>trackBackend</path>
						<code>CR</code>	
						<source>KEYBOARD</source>
					</action>
					<action name="enqueue">
						<path>trackBackend</path>
						<code>2</code>	
						<source>MOUSE</source>
					</action>
					<action name="deselect">
						<path>trackBackend</path>
						<code>ESC</code>		
						<source>KEYBOARD</source>
					</action>
				</view>
				<view type="Composite" name="compositePlaylist">
					<layout>FormLayout</layout>		
					<view type="FooCombo" name="comboPlaylist">
						<layoutdata type="FormData" top="0" left="0" right="100" />
						<backend type="FooBackendPlaylistSwitch" name="playlistComboBackend">
							<debugfg>GRAY</debugfg>
							<debugbg>WHITE</debugbg>
							<watch type="FooWatchPlaylist" name="watchPlaylistCombo">
								<debugfg>WHITE</debugfg>
								<debugbg>RED</debugbg>
							</watch>
							<watch type="FooWatchPlaylistLoad" name="watchPlaylistComboLoad">
								<debugfg>WHITE</debugfg>
								<debugbg>MAGENTA</debugbg>
							</watch>
						</backend>
					</view>
					<view type="FooTable" name="tablePlaylist">
						<layoutdata type="FormData" top="comboPlaylist" left="0" right="100" bottom="buttonsPlaylist"/>
						<backend type="FooBackendPlaylist" name="playlistBackend">
							<format>%artist% - %title%</format>
							<debugfg>BLUE</debugfg>
							<debugbg>WHITE</debugbg>
							<watch type="FooWatchPlaylist" name="watchPlaylistList">
								<debugfg>WHITE</debugfg>
								<debugbg>DARK_RED</debugbg>
							</watch>
							<watch type="FooWatchPlaylistLoad" name="watchPlaylistListLoad">
								<debugfg>WHITE</debugfg>
								<debugbg>DARK_MAGENTA</debugbg>
							</watch>
							<watch type="FooWatchCurrentTrack" name="watchCurrentPos">
								<debugfg>BLACK</debugfg>
								<debugbg>YELLOW</debugbg>
							</watch>
						</backend>
						<menu>
							<item name="playlistFormat" text="change format">
								<action name="format">
									<path>playlistBackend</path>
									<code>0</code>
									<source>MOUSE</source>
								</action>	
							</item>	
						</menu>
						<action name="play">
							<path>playlistBackend</path>
							<code>2</code>	
							<source>MOUSE</source>
						</action>
						<action name="play">
							<path>playlistBackend</path>
							<code>CR</code>		
							<source>KEYBOARD</source>
						</action>
						<action name="remove">
							<path>playlistBackend</path>
							<code>DEL</code>	
							<source>KEYBOARD</source>
						</action>
						<action name="deselect">
							<path>playlistBackend</path>
							<code>ESC</code>		
							<source>KEYBOARD</source>
						</action>
					</view>					
					<view type="FooButtonsPlaylist" name="buttonsPlaylist">
						<layoutdata type="FormData" left="0" right="100" bottom="buttonsPlayback"/>
					</view>				
					<view type="FooButtonsPlayback" name="buttonsPlayback">
						<layoutdata type="FormData" left="0" right="100" bottom="100"/>
					</view>
				</view>
			</view>
			<view type="FooLabel" name="statusbar">
				<layoutdata type="FormData" left="0" right="100" bottom="100"/>
				<backend type="FooBackendText" name="statusbarBackend">
					<format>%status%: %artist% - %title%: %currentTime%/%duration%</format>
					<debugfg>DARK_YELLOW</debugfg>
					<debugbg>WHITE</debugbg>
					<watch type="FooWatchCurrentTrack" name="watchPlaybackTrack">
						<debugfg>WHITE</debugfg>
						<debugbg>DARK_YELLOW</debugbg>
					</watch>
					<watch type="FooWatchPlaybackPos" name="watchPlaybackPos">
						<debugfg>WHITE</debugfg>
						<debugbg>BLACK</debugbg>
					</watch>
					<watch type="FooWatchPlaybackStatus" name="watchPlaybackStatus">
						<debugfg>WHITE</debugfg>
						<debugbg>CYAN</debugbg>
					</watch>
				</backend>
			</view>
		</view>
	</window>	
</fooXmms2>